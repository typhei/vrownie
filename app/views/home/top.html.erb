<!-- ページ遷移 -->
<div class="row-fluid">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
	<div id ="pagewrapper">
	    <div class="paging">
		<% if @start <= 3 || @start.nil? then %>
		    <% paging = [1,2,3,4,5,"...","次へ","最後"] %>
		    <% if @start == 0 then %>
			<% @start = 1 %>
		    <% end %>
		<% else %>
		    <% paging = ["最初","前へ", @start-2, @start-1, @start, @start+1, @start+2,"次へ","最後"] %>
		<% end %>
		<% paging.each do |p| %>
		    <% if p == @start then %>
			<div class="start_number"><span class="inner"><%= p.to_s %></span></div>
		    <% elsif p == "最初" then %>
			<div class="numbers"><span class="inner"><%= link_to "最初", "/top/" %></span></div>
		    <% elsif p == "前へ" then %>
			<div class="numbers"><span class="inner"><%= link_to "前へ", "/home/top/"+(@start-1).to_s %></span></div>
		    <% elsif p == "次へ" then %>
			<div class="numbers"><span class="inner"><%= link_to "次へ", "/home/top/"+(@start+1).to_s %></span></div>
		    <% elsif p == "最後" then %>
			<div class="numbers"><span class="inner"><%= link_to "最後", "/home/top/5" %></span></div>
		    <% elsif p == "..." then %>
			<div class="start_number"><span class="inner">...</span></div>
		    <% else %>
			<div class="numbers"><span class="inner"><%= link_to p.to_s, "/home/top/"+p.to_s %></span></div>
		    <% end %>
		<% end %>
	    </div>    
	</div>
    </div>
</div>
    
